{
	"name": "02_IfCondition_Evaluate_row_count_of_table",
	"properties": {
		"activities": [
			{
				"name": "Lkp to fetch count of rows from table",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"sqlReaderQuery": "SELECT COUNT(*) AS Count FROM dbo.user_info",
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"dataset": {
						"referenceName": "DS_user_info",
						"type": "DatasetReference"
					},
					"firstRowOnly": false
				}
			},
			{
				"name": "Validating the row count",
				"type": "IfCondition",
				"dependsOn": [
					{
						"activity": "Lkp to fetch count of rows from table",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@greater(activity('Lookup1').output.value[0].count,0)",
						"type": "Expression"
					},
					"ifFalseActivities": [
						{
							"name": "Evaluates to False",
							"type": "SetVariable",
							"dependsOn": [],
							"policy": {
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"variableName": "Count",
								"value": "Values are not available"
							}
						}
					],
					"ifTrueActivities": [
						{
							"name": "Evaluates to True",
							"type": "SetVariable",
							"dependsOn": [],
							"policy": {
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"variableName": "Count",
								"value": "Records Are Available\n"
							}
						}
					]
				}
			}
		],
		"variables": {
			"Count": {
				"type": "String"
			}
		},
		"folder": {
			"name": "Control Flow Activity"
		},
		"annotations": []
	}
}